{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "composite": true,
    "allowJs": false,
    "incremental": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/db" }
  ],
  "exclude": [
    "**/.next",
    "node_modules/next",
    "node_modules/react-dom",
    "node_modules/@types/react-dom"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
