{
  "name": "@sudan-codex/db",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./auth-schema": {
      "types": "./dist/schemas/auth-schema.d.ts",
      "default": "./dist/schemas/auth-schema.js"
    },
    "./migrations": {
      "types": "./src/migrations.d.ts",
      "default": "./drizzle/migrations.js"
    }
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "clean": "rm -rf ./dist ./tsconfig.tsbuildinfo",
    "dev": "tsc -b -w",
    "dev:db": "turso dev --db-file devv2.db",
    "db:generate": "NODE_ENV=production drizzle-kit generate  --config=drizzle-production.config.ts",
    "db:generate:dev": "NODE_ENV=development drizzle-kit generate --config=drizzle-development.config.ts",
    "db:migrate": "NODE_ENV=production drizzle-kit migrate --config=drizzle-production.config.ts",
    "db:migrate:dev": "NODE_ENV=development drizzle-kit migrate --config=drizzle-development.config.ts",
    "db:push": "NODE_ENV=production drizzle-kit push --config=drizzle-production.config.ts",
    "db:push:dev": "NODE_ENV=development drizzle-kit push --config=drizzle-development.config.ts",
    "db:drop": "NODE_ENV=production drizzle-kit drop --config=drizzle-production.config.ts",
    "db:drop:dev": "NODE_ENV=development drizzle-kit drop --config=drizzle-development.config.ts",
    "db:seed": "NODE_ENV=production bun run scripts/setup-turso.ts",
    "db:seed:dev": "NODE_ENV=development bun run scripts/setup-turso.ts",
    "db:studio": "NODE_ENV=development drizzle-kit studio --config=drizzle-development.config.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@sudan-codex/types": "workspace:*",
    "better-auth": "^1.4.10",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "react": "^19.2.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
