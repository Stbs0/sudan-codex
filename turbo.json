{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*", "**/drizzle-*.config.ts"],

  "tasks": {
    "test:unit": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_WHATSAPP_NUMBER",
        "TURSO_AUTH_TOKEN",
        "TURSO_DATABASE_URL",
        "VERCEL_OIDC_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "CI",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_METICULOUS_RECORDING_TOKEN",
        "NEXT_PUBLIC_EXPO_SCHEMA"
      ],
      "passThroughEnv": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_POSTHOG_HOST","CI",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_WHATSAPP_NUMBER",
        "TURSO_AUTH_TOKEN",
        "TURSO_DATABASE_URL",
        "VERCEL_OIDC_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_METICULOUS_RECORDING_TOKEN",
        "NEXT_PUBLIC_EXPO_SCHEMA"
      ],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^build"],

      "cache": true
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    }

  }
}
