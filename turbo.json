{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*", "**/drizzle-*.config.ts"],


  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_WHATSAPP_NUMBER",
        "TURSO_AUTH_TOKEN",
        "TURSO_DATABASE_URL",
        "VERCEL_OIDC_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_METICULOUS_RECORDING_TOKEN",
        "NEXT_PUBLIC_EXPO_SCHEMA"
      ],
      "passThroughEnv": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_WHATSAPP_NUMBER",
        "TURSO_AUTH_TOKEN",
        "TURSO_DATABASE_URL",
        "VERCEL_OIDC_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_METICULOUS_RECORDING_TOKEN",
        "NEXT_PUBLIC_EXPO_SCHEMA"
      ],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
      
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": [],

      "cache": false
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "ios": {
      "cache": false
    },
    "android": {
      "dependsOn": ["prebuild:android"],
      "outputs": [".android/**"],
      "cache": true
    },
    "prebuild:android": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:generate:dev": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:dev": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:push:dev": {
      "cache": false
    },
    "db:drop": {
      "cache": false
    },
    "db:drop:dev": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:seed:dev": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
