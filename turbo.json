{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*", "**/drizzle-*.config.ts"],
  "globalPassThroughEnv": ["ANDROID_HOME"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["build"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "ios": {
      "cache": false
    },
    "android": {
      "dependsOn": ["prebuild:android"],
      "outputs": [".android/**"],
      "cache": true
    },
    "prebuild:android": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:generate:dev": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:dev": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:push:dev": {
      "cache": false
    },
    "db:drop": {
      "cache": false
    },
    "db:drop:dev": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:seed:dev": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
