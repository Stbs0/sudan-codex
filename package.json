{
  "name": "sudan-codex",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/mobile",
    "apps/web-nextjs",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev dev:db --filter=@sudan-codex/web --filter=@sudan-codex/mobile --filter=\"./packages/*\" --filter=!\"@sudan-codex/types\"",
    "dev:web": "turbo run dev dev:db --filter=@sudan-codex/web --filter=\"./packages/*\" --filter=!\"@sudan-codex/types\"",
    "dev:mobile": "turbo run dev dev:db --filter=@sudan-codex/mobile --filter=\"./packages/*\" --filter=!\"@sudan-codex/types\"",
    "dev:web:build": "turbo run dev --filter=@sudan-codex/web",
    "dev:mobile:build": "turbo run dev --filter=@sudan-codex/mobile",
    "test:unit": "turbo run test:unit",
    "start": "turbo run start",
    "check-types": "turbo run check-types --continue",
    "lint": "turbo run lint --continue",
    "test:e2e": "turbo run test:e2e",
    "dev:packages": "turbo run dev --filter=\"./packages/*\"",
    "clean": "rm -rf node_modules ./apps/*/node_modules ./packages/*/node_modules bun.lock ./apps/mobile/.expo",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "postinstall": "bun build:packages"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "eslint": "^9.39.2",
    "eslint-config-turbo": "^2.8.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "secretlint": "^11.2.5",
    "syncpack": "^14.0.0-alpha.32",
    "turbo": "^2.7.2"
  },
  "overrides": {
    "@types/react": "^19.2.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "packageManager": "bun@1.3.5",
  "trustedDependencies": [
    "@posthog/cli",
    "@sudan-codex/mobile",
    "@swc/core",
    "core-js",
    "unrs-resolver"
  ]
}
